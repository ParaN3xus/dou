<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
    fx:controller="pkg.paran3xus.dou.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <VBox alignment="CENTER" spacing="10.0" styleClass="console-panel">
        <HBox alignment="CENTER" spacing="10.0">
            <ImageView fx:id="avatarImage" fitHeight="100.0" fitWidth="100.0" preserveRatio="true"
                styleClass="avatar-frame" />
            <TextField fx:id="nicknameField" promptText="Enter nickname" maxWidth="200" />
        </HBox>

        <Button fx:id="createRoomButton" text="Create Room" maxWidth="200" />
        <ListView fx:id="roomList" prefHeight="200.0" maxWidth="300" />
        <Button fx:id="joinRoomButton" text="Join Room" maxWidth="200" />
    </VBox>

    <Canvas fx:id="gameCanvas" VBox.vgrow="ALWAYS" />
</VBox>