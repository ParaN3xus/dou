<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<GridPane fx:id="playerInfoPane" alignment="CENTER" hgap="10" vgap="5"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="pkg.paran3xus.dou.controls.PlayerInfoPaneController">
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>

    <VBox alignment="CENTER" GridPane.columnIndex="0">
        <ImageView fx:id="avatarImage" fitHeight="60.0" fitWidth="60.0" preserveRatio="true" />
        <Label fx:id="playerName" text="Player" />
    </VBox>

    <VBox alignment="CENTER" GridPane.columnIndex="1">
        <Label fx:id="cardCount" text="Cards: 17" />
        <Label fx:id="statusMessage" text="Waiting..." />
    </VBox>
</GridPane>